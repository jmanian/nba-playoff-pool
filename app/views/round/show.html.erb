<p class="lead"><%= @round_name %></p>
<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <%= render partial: 'round/matchup_title', collection: @matchups, as: :matchup, spacer_template: 'shared/empty_cell' %>
    </tr>
    <tr>
      <td></td>
      <%= render partial: 'round/matchup_subtitle', collection: @matchups, spacer_template: 'shared/empty_cell' %>
    </tr>
  </thead>
  <%= render partial: 'round/user_row', collection: @user_data %>
  <tr><td></td></tr>
  <tr><td></td></tr>
  <%= render partial: 'round/matchup_summary_row', collection: (0...@num_outcomes).to_a, as: :outcome %>
</table>
