<% pick = picks_by_matchup_id[matchup.id] %>
<% if pick %>
  <td class="<%= class_names(:'text-center', 'table-secondary': !pick.winner_is_favorite)%>">
    <%= pick.winner.name %>
  </td>
  <td class="text-center">
    in <%= pick.num_games %>
  </td>
  <td class="align-middle">
    <div class="progress bg-secondary" style="--bs-bg-opacity: .15;" data-bs-toggle="tooltip" data-bs-html="true" title="<%= pick.points_tooltip %>">
      <% if pick.min_points.positive? %>
        <% pct = (pick.min_points_percentage * 100).round %>
        <div class="progress-bar bg-primary" role="progressbar" style="width: <%= pct %>%">
          <%= pick.min_points %>
        </div>
      <% end %>
      <% if pick.potential_points.positive? %>
        <% pct = (pick.potential_points_percentage * 100).round %>
        <div class="progress-bar progress-bar-striped bg-info" role="progressbar" style="width: <%= pct %>%">
          <%= pick.potential_points %>
        </div>
      <% end %>
    </div>
  </td>
<% else %>
  <td></td>
  <td></td>
  <td></td>
<% end %>
