<% pick = picks_by_matchup_id[matchup.id] %>
<% if pick %>
  <td class="<%= class_names(:'text-center', 'table-secondary': !pick.winner_is_favorite)%>">
    <%= pick.winner.name %>
  </td>
  <td class="text-center">
    in <%= pick.num_games %>
  </td>
  <td class="text-end bg-danger bg-gradient" style="--bs-bg-opacity: <%= pick.min_points_percentage * 0.5 %>">
    <%= pick.min_points %>
  </td>
  <td class="text-end bg-danger bg-gradient" style="--bs-bg-opacity: <%= pick.max_points_percentage * 0.5 %>">
    <%= pick.max_points %>
  </td>
<% else %>
  <td></td>
  <td></td>
  <td></td>
  <td></td>
<% end %>
